{
  "name": "@douxcode/vue-spring-bottom-sheet",
  "description": "Modern and Performant Bottom Sheet for Vue.js",
  "keywords": [
    "animation",
    "bottom-drawer",
    "bottom-sheet",
    "bottomsheet",
    "dialog",
    "drag-drop",
    "draggableview",
    "drawer",
    "gesture-control",
    "modal",
    "motion",
    "overlay",
    "popup",
    "vue",
    "vueuse/motion",
    "vueuse/gesture",
    "sheet",
    "typescript"
  ],
  "author": "Arion Paul",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/megaarmos/vue-spring-bottom-sheet.git"
  },
  "homepage": "https://vue-spring-bottom-sheet.douxcode.com/",
